<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de formulario para el chatbot -->
    <record id="view_openai_custom_chatbot_form" model="ir.ui.view">
        <field name="name">Custom Chatbot OpenAI</field> 
        <field name="model">openai_custom_chatbot.chatbot</field> 
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="message" widget="text"/> 
                        <field name="response" widget="text"/> 
                    </group>
                    <footer>
                        <button name="send_message" string="Enviar" type="object" class="oe_highlight"/> 
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción para abrir la vista de formulario del chatbot -->
    <record id="openai_custom_chatbot_action" model="ir.actions.act_window">
        <field name="name">Custom Chatbot OpenAI</field> 
        <field name="res_model">openai_custom_chatbot.chatbot</field> 
        <field name="view_mode">form</field> 
        <field name="target">current</field> 
    </record>

    <!-- Menú para acceder al chatbot, colocado bajo el menú de configuración -->
    <menuitem id="openai_custom_chatbot_root_menu" name="Custom Chatbot" sequence="10" parent="base.menu_custom"/>
    <menuitem id="openai_custom_chatbot_menu" name="OpenAI Chatbot" parent="openai_custom_chatbot_root_menu" action="openai_custom_chatbot_action"/>
</odoo>
