<odoo>
    <data>
        <record id="view_chatbot_config_form" model="ir.ui.view">
            <field name="name">chatbot.config.form</field>
            <field name="model">chatbot.config</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="api_key"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="chatbot_config_action" model="ir.actions.act_window">
            <field name="name">Configuración del Chatbot</field>
            <field name="res_model">chatbot.config</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_chatbot_config_form"/>
            <field name="target">current</field>
        </record>

        <menuitem id="menu_chatbot_root" name="Chatbot"/>
        <menuitem id="menu_chatbot_config" name="Configuración" parent="menu_chatbot_root" action="chatbot_config_action"/>
    </data>
</odoo>