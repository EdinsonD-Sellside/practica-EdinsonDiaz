<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_chatbot_conversation_form" model="ir.ui.view">
        <field name="name">chatbot.conversation.form</field>
        <field name="model">chatbot.conversation</field>
        <field name="arch" type="xml">
            <form string="Chatbot Conversation">
                <sheet>
                    <group>
                        <field name="user_id"/>
                        <field name="create_date"/>
                    </group>
                    <notebook>
                        <page string="Messages">
                            <field name="messages">
                                <tree string="Messages">
                                    <field name="sender"/>
                                    <field name="message"/>
                                    <field name="timestamp"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_chatbot_conversation_tree" model="ir.ui.view">
        <field name="name">chatbot.conversation.tree</field>
        <field name="model">chatbot.conversation</field>
        <field name="arch" type="xml">
            <tree string="Chatbot Conversations">
                <field name="user_id"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>

    <record id="view_chatbot_message_form" model="ir.ui.view">
        <field name="name">chatbot.message.form</field>
        <field name="model">chatbot.message</field>
        <field name="arch" type="xml">
            <form string="Chatbot Message">
                <sheet>
                    <group>
                        <field name="conversation_id"/>
                        <field name="sender"/>
                        <field name="message"/>
                        <field name="timestamp"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_chatbot_message_tree" model="ir.ui.view">
        <field name="name">chatbot.message.tree</field>
        <field name="model">chatbot.message</field>
        <field name="arch" type="xml">
            <tree string="Chatbot Messages">
                <field name="conversation_id"/>
                <field name="sender"/>
                <field name="message"/>
                <field name="timestamp"/>
            </tree>
        </field>
    </record>

    <menuitem id="menu_chatbot_root" name="OpenAI Chat Module" sequence="10"/>
    <menuitem id="menu_chatbot_conversations" name="Conversations" parent="menu_chatbot_root" action="action_chatbot_conversation"/>

    <record id="action_chatbot_conversation" model="ir.actions.act_window">
        <field name="name">Conversations</field>
        <field name="res_model">chatbot.conversation</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>