<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_chatbot_form" model="ir.ui.view">
        <field name="name">chatbot.openai.form</field>
        <field name="model">chatbot.openai</field>
        <field name="arch" type="xml">
            <form string="Chatbot OpenAI">
                <sheet>
                    <group>
                        <field name="user_message"/>
                        <button name="get_openai_response" string="Enviar" type="object" class="btn-primary"/>
                        <field name="bot_response" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_chatbot_tree" model="ir.ui.view">
        <field name="name">chatbot.openai.tree</field>
        <field name="model">chatbot.openai</field>
        <field name="arch" type="xml">
            <tree string="Chatbot OpenAI">
                <field name="user_message"/>
                <field name="bot_response"/>
            </tree>
        </field>
    </record>

    <menuitem id="menu_chatbot_root" name="Chatbot OpenAI" sequence="10" parent="base.menu_custom"/>

    <menuitem id="menu_chatbot" name="Chatbot" sequence="10" parent="menu_chatbot_root" action="action_chatbot"/>
</odoo>
