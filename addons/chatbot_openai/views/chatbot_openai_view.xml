<odoo>
    <data>
        <!-- Formulario para el chatbot -->
        <record id="view_chatbot_openai_form" model="ir.ui.view">
            <field name="name">chatbot.openai.form</field>
            <field name="model">chatbot.openai</field>
            <field name="arch" type="xml">
                <form string="Chatbot OpenAI">
                    <group>
                        <field name="user_message"/>
                        <field name="bot_response" readonly="1"/>
                    </group>
                    <footer>
                        <button string="Enviar" type="object" name="get_openai_response" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Acción de vista para el formulario -->
        <record id="action_chatbot_openai" model="ir.actions.act_window">
            <field name="name">Chatbot OpenAI</field>
            <field name="res_model">chatbot.openai</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_chatbot_openai_form"/>
        </record>

        <!-- Menú para acceder al chatbot -->
        <menuitem id="menu_chatbot_openai" name="Chatbot OpenAI" parent="base.menu_custom"/>
    </data>
</odoo>
